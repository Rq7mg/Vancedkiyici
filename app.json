{
  "name": "Anon Music",
  "description": "A Telegram Music Player Bot, written in Python with Pyrogram and Py-Tgcalls.",
  "logo": "https://te.legra.ph/file/b8a0c1a00db3e57522b53.jpg",
  "keywords": [
    "python3",
    "telegram",
    "bot",
    "musicbot",
    "pyrogram"
  ],
  "env": {
    "API_ID": {
      "description": "Get this value from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Get this value from https://my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "A Bot token from BotFather",
      "required": true
    },
    "MONGO_DB_URI": {
      "description": "MongoDB connection URI",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram user ID of the owner",
      "required": true
    },
    "STRING_SESSION": {
      "description": "Pyrogram string session",
      "required": true
    },
    "LOGGER_ID": {
      "description": "Telegram log group ID",
      "required": true
    },
    "HEROKU_API_KEY": {
      "description": "Heroku API key (optional)",
      "required": false
    },
    "HEROKU_APP_NAME": {
      "description": "Heroku app name (optional)",
      "required": false
    }
  },
  "buildpacks": [
    { "url": "heroku/python" },
    { "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git" }
  ]
}
